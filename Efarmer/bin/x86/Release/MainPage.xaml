<Page
    x:Class="Efarmer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Efarmer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" FontFamily="Global User Interface">
	<Page.Projection>
		<PlaneProjection/>
	</Page.Projection>
	<Page.Background>
		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
			<GradientStop Color="Black"/>
			<GradientStop Color="White" Offset="1"/>
		</LinearGradientBrush>
	</Page.Background>

    <Grid x:Name="Index">
        
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
    	<Button x:ConnectionId='1' x:Name="test_button" HorizontalAlignment="Center" Margin="114,218,654,382" VerticalAlignment="Center" Height="168" Width="598" BorderThickness="0"                           Foreground="White" Background="#FF55B21F" Content="Soil Test and Analysis" FontSize="36" FontWeight="Bold" FontFamily="Calibri"  />
        <Button x:ConnectionId='2' x:Name="reports_button" HorizontalAlignment="Center" Margin="115,397,803,189" VerticalAlignment="Center" BorderThickness="0" Background="#FF21618D" Content="Reports" FontSize="36" FontWeight="Bold"  Foreground="White" Width="448" Height="182"                             />
        <Button x:ConnectionId='3' x:Name="profile_button" HorizontalAlignment="Center" Margin="721,217,55,383" VerticalAlignment="Center" Width="590" Height="168" BorderThickness="0"                              Background="#FF0BA0B8" Content="Update Profile" FontSize="36" Foreground="White" FontWeight="Bold"/>

        <StackPanel x:Name="top_panel" HorizontalAlignment="Left" Height="110" VerticalAlignment="Top" Width="1346" Orientation="Horizontal" Grid.ColumnSpan="2" Margin="10,10,0,0" Background="Black">

            <TextBlock x:Name="welcome_block" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Height="48" Margin="0,39,0,23" Width="168">
            	<Run FontSize="36" Text="  Welcome"/>
            </TextBlock>
            <TextBlock x:Name="name_from_db" TextWrapping="Wrap" Margin="4,49,20,23" Width="911" HorizontalAlignment="Left" VerticalAlignment="Center" Height="38" FontSize="24" FontWeight="Bold"/>
            <TextBlock x:Name="firstpage_header" TextWrapping="Wrap" Text="E-Farmer" Width="212" FontSize="48" FontWeight="Bold" Margin="0,29,0,23"/>


        </StackPanel>
        <Button x:ConnectionId='4' x:Name="help_button" HorizontalAlignment="Center" Margin="571,398,55,188" VerticalAlignment="Center" Width="740" Height="182" BorderThickness="0" FontWeight="Bold" FontSize="36"                           Foreground="White" Background="#FFBDB625" Content="Help" Padding="300,50"/>
        




    </Grid>
</Page>

