<Page
    x:Class="Efarmer.Reports"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Efarmer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/BackGround/background.png"/>
        </Grid.Background>
        <StackPanel x:Name="top_panel" HorizontalAlignment="Left" Height="110" VerticalAlignment="Top" Width="1346" Orientation="Horizontal" Margin="10,10,0,0" Background="Black">
            <Button x:ConnectionId='2' x:Name="backButton"                IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}" Margin="10,29,0,29" VerticalAlignment="Center" Height="52" Width="51" HorizontalAlignment="Center"/>
            <TextBlock x:Name="firstpage_header" TextWrapping="Wrap" Text="Reports" Height="52" Width="358" FontSize="48" FontWeight="Bold" Margin="0,29"/>
        </StackPanel>
        <ListView x:Name="report" HorizontalAlignment="Left" Height="510" Margin="79,161,0,0" VerticalAlignment="Top" Width="1222" Background="#FF2F2F30"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="993,-101,0,0" VerticalAlignment="Top"/>
        <Button x:ConnectionId='1' x:Name="save" Content="Continue&#xD;&#xA;" HorizontalAlignment="Left" Margin="1209,690,0,0" VerticalAlignment="Top" Height="43" Width="95" Background="#FF07B1F1" RenderTransformOrigin="1.222,0.686"                   />

    </Grid>
</Page>

