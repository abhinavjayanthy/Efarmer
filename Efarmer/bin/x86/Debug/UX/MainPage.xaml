<Page
    x:Class="Efarmer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Efarmer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush ImageSource="ms-appx:///Assets/BackGround/background.png"/>
    </Page.Background>

    <Grid x:Name="Index">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/BackGround/background.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
    		<ColumnDefinition Width="342*"/>
    		<ColumnDefinition Width="341*"/>
    	</Grid.ColumnDefinitions>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="55*"/>
    		<RowDefinition Height="329*"/>
    	</Grid.RowDefinitions>
    	<Button x:ConnectionId='1' x:Name="test_button" HorizontalAlignment="Left" Margin="76,93,0,0" VerticalAlignment="Top" Height="80" Width="80" Grid.Row="1" BorderThickness="0"                           Foreground="White" Background="#FF727272" Content="$" FontSize="36" FontWeight="Bold" FontFamily="Calibri"/>
        <Button x:Name="reports_button" HorizontalAlignment="Left" Margin="76,292,0,0" Grid.Row="1" VerticalAlignment="Top" BorderThickness="0" Background="#FF727272" Content="[ ]" FontSize="36" FontWeight="Bold"  Foreground="White" Width="80" Height="80"/>
        <Button x:ConnectionId='2' x:Name="profile_button" HorizontalAlignment="Left" Margin="123,93,0,0" Grid.Row="1" VerticalAlignment="Top" Width="80" Height="80" BorderThickness="0"                              Background="#FF727272" Content="@" FontSize="36" Foreground="White" Grid.Column="1"/>
    	<TextBlock x:Name="soiltest_block" HorizontalAlignment="Left" Margin="183,112,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Soil Test and Analysis" VerticalAlignment="Top" Height="56" Width="339" FontSize="30" FontFamily="Global User Interface"/>
    	<TextBlock x:Name="view_reports_block" HorizontalAlignment="Left" Margin="183,321,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Height="51" Width="229" FontSize="30" FontFamily="Global User Interface">
    		<Run Text="Reports"/>
    		<LineBreak/>
    		<Run/>
    	</TextBlock>
    	<TextBlock x:Name="update_profile_block" Margin="249,112,148,0" Grid.Row="1" TextWrapping="Wrap" Text="My Profile" VerticalAlignment="Top" Height="47" FontSize="30" FontFamily="Global User Interface" Grid.Column="1"/>

        <StackPanel x:Name="top_panel" HorizontalAlignment="Left" Height="110" VerticalAlignment="Top" Width="1346" Orientation="Horizontal" Grid.ColumnSpan="2" Margin="10,10,0,0" Grid.RowSpan="2" Background="Black">

            <TextBlock x:Name="welcome_block" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Height="48" Margin="0,39,0,23" Width="168">
            	<Run FontSize="36" Text="  Welcome"/>
            </TextBlock>
            <TextBlock x:Name="name_from_db" TextWrapping="Wrap" Margin="4,49,20,23" Width="911" HorizontalAlignment="Left" VerticalAlignment="Center" Height="38" FontSize="24" FontWeight="Bold"/>
            <TextBlock x:Name="firstpage_header" TextWrapping="Wrap" Text="E-Farmer" Width="212" FontSize="48" FontWeight="Bold" Margin="0,29,0,23"/>


        </StackPanel>
        <Button x:ConnectionId='3' x:Name="help_button" Grid.Column="1" HorizontalAlignment="Left" Margin="123,292,0,0" Grid.Row="1" VerticalAlignment="Top" Width="80" Height="80" BorderThickness="0" FontWeight="Bold" FontSize="36"                           Foreground="White" Background="#FF727272" Content="?"/>
        <TextBlock x:Name="help_block" HorizontalAlignment="Left" Margin="249,316,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Help" VerticalAlignment="Top" Height="56" Width="101" FontSize="30" FontFamily="Global User Interface" Grid.Column="1"/>




    </Grid>
</Page>

