<Page
    x:Class="Efarmer.recommendedcrops"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Efarmer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:/Assets/BackGround/background.png"/>
        </Grid.Background>
        <StackPanel x:Name="top_panel" HorizontalAlignment="Left" Height="110" VerticalAlignment="Top" Width="1346" Orientation="Horizontal" Margin="10,10,0,0" Background="Black">
            <TextBlock x:Name="firstpage_header" TextWrapping="Wrap" Text=" Soil Test and Analysis" Height="52" Width="535" FontSize="48" FontWeight="Bold" Margin="0,29"/>
            <TextBlock x:Name="current_crop_header" TextWrapping="Wrap" Width="793" FontSize="36" Margin="0,43,0,10" TextAlignment="Right" FontFamily="Global User Interface" VerticalAlignment="Center" HorizontalAlignment="Center" Height="57"/>
        </StackPanel>
        <TextBlock x:Name="soIL_man_block_Copy" HorizontalAlignment="Left" Margin="26,125,0,0" TextWrapping="Wrap" Text="Recommended Crops :" VerticalAlignment="Top" Height="36" Width="300" FontSize="26.667" FontWeight="Bold"/>
        <ListBox x:ConnectionId='1' x:Name="crop_list" HorizontalAlignment="Left" Height="415" Margin="26,294,0,0" VerticalAlignment="Top" Width="212"                                               SelectionMode="Single"/>
        <WebView x:Name="data" HorizontalAlignment="Left" Height="415" Margin="258,294,0,0" VerticalAlignment="Top" Width="1080"/>
        <TextBlock x:Name="soil_tb" HorizontalAlignment="Left" Margin="145,166,0,0" TextWrapping="Wrap" Text="[Your Soil's npk in kg/ha]" VerticalAlignment="Top" Width="181" FontSize="14" FontWeight="Bold" Foreground="#FFB8B8B8"/>
        <TextBlock x:Name="soil_n" HorizontalAlignment="Left" Margin="26,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="104" FontSize="14">
        	<Run Text="Nitrogen "/>
        	<Run Text="(n) :"/>
        </TextBlock>
        <TextBlock x:Name="soil_p" HorizontalAlignment="Left" Margin="26,225,0,0" TextWrapping="Wrap" Text="Phosphorous (p) :" VerticalAlignment="Top" Width="115" FontSize="14"/>
        <TextBlock x:Name="soil_k" HorizontalAlignment="Left" Margin="26,261,0,0" TextWrapping="Wrap" Text="Potassium (k) :" VerticalAlignment="Top" Width="115" FontSize="14"/>
        <TextBlock x:Name="n_db" HorizontalAlignment="Left" Margin="185,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" Width="76" FontSize="14" TextAlignment="Center"/>
        <TextBlock x:Name="p_db" HorizontalAlignment="Left" Margin="185,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" Width="76" FontSize="14" TextAlignment="Center"/>
        <TextBlock x:Name="k_db" HorizontalAlignment="Left" Margin="185,261,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" Width="76" FontSize="14" TextAlignment="Center"/>
        <TextBlock x:Name="soil_tb_Copy" HorizontalAlignment="Left" Margin="332,166,0,0" TextWrapping="Wrap" Text="[Required npk in kg/ha ]" VerticalAlignment="Top" Width="174" FontSize="14" FontWeight="Bold" Foreground="#FFB8B8B8"/>
        <TextBlock x:Name="n_from_file" HorizontalAlignment="Left" Margin="374,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" Width="72" FontSize="14" TextAlignment="Center"/>
        <TextBlock x:Name="p_from_file" HorizontalAlignment="Left" Margin="374,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" Width="72" FontSize="14" TextAlignment="Center"/>
        <TextBlock x:Name="k_from_file" HorizontalAlignment="Left" Margin="374,261,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" Width="72" FontSize="14" TextAlignment="Center"/>
        <TextBlock x:Name="yied_b" HorizontalAlignment="Left" Margin="845,166,0,0" TextWrapping="Wrap" Text="# Expected Yield for your " VerticalAlignment="Top" Width="165" FontSize="14"/>
        <TextBlock x:Name="area_from_user" HorizontalAlignment="Left" Margin="1010,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="67" FontWeight="Bold" RenderTransformOrigin="0.576,0" FontSize="18" Height="22" TextAlignment="Center"/>
        <TextBlock x:Name="yied_b_Copy" HorizontalAlignment="Left" Margin="1087,166,0,0" TextWrapping="Wrap" Text="Hectares of land is" VerticalAlignment="Top" Width="117" FontSize="14"/>
        <TextBlock x:Name="yield" HorizontalAlignment="Left" Margin="1209,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="84" FontSize="18" Height="22" TextAlignment="Center" FontWeight="Bold"/>
        <TextBlock x:Name="yied_b_Copy1" HorizontalAlignment="Left" Margin="1298,166,0,0" TextWrapping="Wrap" Text="tons" VerticalAlignment="Top" Width="29" FontSize="14"/>
        <TextBlock x:Name="weather" HorizontalAlignment="Left" Margin="845,198,0,0" TextWrapping="Wrap" Text="# Present Temperature is" VerticalAlignment="Top" Width="165" FontSize="14"/>
        <TextBlock x:Name="temp_from_user" HorizontalAlignment="Left" Margin="1015,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="167" FontWeight="Bold" RenderTransformOrigin="0.576,0" FontSize="18" Height="22"/>
        <TextBlock x:Name="soil_tb_Copy1" HorizontalAlignment="Left" Margin="526,166,0,0" TextWrapping="Wrap" Text="[% Difference ]" VerticalAlignment="Top" Width="100" FontSize="14" FontWeight="Bold" Foreground="#FFB8B8B8"/>
        <TextBlock x:Name="soil_tb_Copy2" HorizontalAlignment="Left" Margin="649,166,0,0" TextWrapping="Wrap" Text="[Fertilizer Required ]" VerticalAlignment="Top" Width="149" FontSize="14" FontWeight="Bold" Foreground="#FFB8B8B8"/>
        <TextBlock x:Name="n_diff" HorizontalAlignment="Left" Margin="511,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" Width="129" FontSize="14" TextAlignment="Center"/>
        <TextBlock x:Name="p_diff" HorizontalAlignment="Left" Margin="511,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" Width="129" FontSize="14" TextAlignment="Center"/>
        <TextBlock x:Name="k_diff" HorizontalAlignment="Left" Margin="511,261,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" Width="129" FontSize="14" TextAlignment="Center"/>
        <TextBlock x:Name="nfr" HorizontalAlignment="Left" Margin="670,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" Width="97" FontSize="14" TextAlignment="Center"/>
        <TextBlock x:Name="pfr" HorizontalAlignment="Left" Margin="670,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" Width="97" FontSize="14" TextAlignment="Center"/>
        <TextBlock x:Name="kfr" HorizontalAlignment="Left" Margin="670,261,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" Width="97" FontSize="14" TextAlignment="Center"/>
        <Button x:ConnectionId='2' x:Name="save" Content="Save the Analysis" HorizontalAlignment="Left" Margin="1116,715,0,0" VerticalAlignment="Top" Height="43" Width="222" Background="#FF07B1F1" RenderTransformOrigin="1.222,0.686"                   />


    </Grid>
</Page>

