<Page
    x:Class="Efarmer.BlankPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Efarmer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Background="Black">

    <Grid x:Name="ProfileUpdate">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/BackGround/background.png"/>
        </Grid.Background>

        <StackPanel x:Name="top_panel" HorizontalAlignment="Left" Height="110" VerticalAlignment="Top" Width="1346" Orientation="Horizontal" Margin="10,10,0,0" Background="Black" Grid.ColumnSpan="2">
            <Button x:ConnectionId='2' x:Name="backButton"                IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}" Margin="10,29,0,29" VerticalAlignment="Center" Height="52" Width="51" HorizontalAlignment="Center"/>
            <TextBlock x:Name="firstpage_header" TextWrapping="Wrap" Text=" My Profile" Height="52" Width="358" FontSize="48" FontWeight="Bold" Margin="0,29"/>
        </StackPanel>
        <Button x:ConnectionId='1' x:Name="save" Content="Save&#xD;&#xA;" HorizontalAlignment="Left" Margin="1209,690,0,0" VerticalAlignment="Top" Height="43" Width="95" Background="#FF07B1F1" RenderTransformOrigin="1.222,0.686"                   />
        <TextBlock x:Name="first_nameb" HorizontalAlignment="Left" Margin="46,305,0,0" TextWrapping="Wrap" Text="FirstName :" VerticalAlignment="Top" FontSize="26.667" Height="32" Width="133"/>
    	<TextBlock x:Name="last_nameb" HorizontalAlignment="Left" Margin="46,374,0,0" TextWrapping="Wrap" Text="LastName :" VerticalAlignment="Top" FontSize="26.667" Height="32" Width="130"/>
        <TextBlock x:Name="zipcode_b" HorizontalAlignment="Left" Margin="43,505,0,0" TextWrapping="Wrap" Text="ZipCode :" VerticalAlignment="Top" FontSize="26.667" Height="32" Width="133"/>
        <TextBox x:Name="firstname_box" HorizontalAlignment="Left" Margin="341,305,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="488" Height="32"/>
    	<TextBox x:Name="lastname_box" HorizontalAlignment="Left" Margin="341,374,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="488" Height="32"/>
        <TextBox x:Name="zipcode_box" HorizontalAlignment="Left" Margin="341,505,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="234" Height="32"/>
        <TextBlock x:Name="place_block" HorizontalAlignment="Left" Margin="46,446,0,0" TextWrapping="Wrap" Text="Village/town/City :" VerticalAlignment="Top" FontSize="26.667" Height="32" Width="236" RenderTransformOrigin="0.49,-1.788"/>
        <TextBox x:Name="place_box" HorizontalAlignment="Left" Margin="341,446,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="234" Height="32"/>



    </Grid>
</Page>

