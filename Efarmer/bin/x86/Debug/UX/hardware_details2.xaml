<Page
    x:Class="Efarmer.hardware_details2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Efarmer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/BackGround/background.png"/>
        </Grid.Background>
        <StackPanel x:Name="top_panel" HorizontalAlignment="Left" Height="110" VerticalAlignment="Top" Width="1346" Orientation="Horizontal" Margin="10,10,0,0" Background="Black">
            <TextBlock x:Name="firstpage_header" TextWrapping="Wrap" Text=" Soil Test and Analysis" Height="52" Width="556" FontSize="48" FontWeight="Bold" Margin="0,29"/>
        </StackPanel>
        <TextBlock x:Name="soil_type_box" HorizontalAlignment="Left" Margin="124,271,0,0" TextWrapping="Wrap" Text="Soil Type :" VerticalAlignment="Top" FontSize="36" Height="45" Width="216" Foreground="White"/>
        <ComboBox x:Name="soil_type_combo" HorizontalAlignment="Left" Margin="412,271,0,0" VerticalAlignment="Top" Width="455">
            <x:String>Red soil</x:String>
            <x:String>Lateritic soil</x:String>
            <x:String>Black soil</x:String>
            <x:String>Alluvial soil</x:String>
            <x:String>Desert soil</x:String>
            <x:String>Forest and Hill soils</x:String>
            <x:String>Saline and Alkali soil</x:String>
            <x:String>Acid soil</x:String>
            <x:String>Peaty and Marshy soil</x:String>
            <x:String>Sandy and loam soil</x:String>
            <x:String>Sandy and loam soil - drained</x:String>
            <x:String>Sandy and loam soil - not drained</x:String>
        </ComboBox>
        <TextBlock x:Name="landcovered_block" HorizontalAlignment="Left" Margin="124,354,0,0" TextWrapping="Wrap" Text="Land Covered :" VerticalAlignment="Top" FontSize="36" Height="32" Width="288" Foreground="White"/>
        <TextBox x:Name="land_covered_box" HorizontalAlignment="Left" Margin="412,354,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" Height="11"/>
        <TextBlock x:Name="land_hectors_block" HorizontalAlignment="Left" Margin="573,371,0,0" TextWrapping="Wrap" Text="Hectares" VerticalAlignment="Top" FontSize="16" Height="15" Width="64" Foreground="White"/>
        <TextBlock x:Name="season_block" HorizontalAlignment="Left" Margin="124,435,0,0" TextWrapping="Wrap" Text="Season :" VerticalAlignment="Top" FontSize="36" Height="55" Width="164" Foreground="White"/>
        <ComboBox x:Name="season_box" HorizontalAlignment="Left" Margin="412,435,0,0" VerticalAlignment="Top" Width="225">
            <x:String>Summer</x:String>
            <x:String>Winter</x:String>
            <x:String>Rainy</x:String>
        </ComboBox>
        <TextBlock x:Name="soIL_man_block" HorizontalAlignment="Left" Margin="31,148,0,0" TextWrapping="Wrap" Text="Last Step,  just enter following fields :" VerticalAlignment="Top" Height="36" Width="577" FontSize="26.667" FontWeight="Bold"/>
        <Button x:ConnectionId='1' x:Name="soil_test_commom_cont_button" Content="Done! Get Values From Sensor" HorizontalAlignment="Left" Margin="930,690,0,0" VerticalAlignment="Top"                                            Height="43" Background="#FF07B1F1" Width="250"/>
        <Button x:ConnectionId='2' x:Name="cancel_overview" Content="Cancel&#xA;" HorizontalAlignment="Left" Margin="1213,690,0,0" VerticalAlignment="Top" Height="43" Width="95" Background="#FF07B1F1" RenderTransformOrigin="1.222,0.686"                                 />

    </Grid>
</Page>

