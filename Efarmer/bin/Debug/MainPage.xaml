<Page
    x:Class="Efarmer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Efarmer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="Index" Background="#FF3CB8D3">
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="342*"/>
    		<ColumnDefinition Width="341*"/>
    	</Grid.ColumnDefinitions>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="55*"/>
    		<RowDefinition Height="329*"/>
    	</Grid.RowDefinitions>
    	<Button x:Name="test_button" HorizontalAlignment="Left" Margin="76,93,0,0" VerticalAlignment="Top" Height="75" Width="87" Grid.Row="1" BorderThickness="4">
    		<Image x:Name="test_icon" Height="50" Source="Assets/ButtonLogos/Test.png" Stretch="Fill" Width="48"/>
    	</Button>
    	<Button x:Name="reports_button" HorizontalAlignment="Left" Margin="76,240,0,0" Grid.Row="1" VerticalAlignment="Top" Width="87" Height="75" BorderThickness="4">
    		<Image x:Name="report_icon" Height="47" Source="Assets/ButtonLogos/report.png" Stretch="Fill" Width="42" RenderTransformOrigin="0.285,0.465"/>
    	</Button>
    	<Button x:ConnectionId='1' x:Name="profile_button" HorizontalAlignment="Left" Margin="76,393,0,0" Grid.Row="1" VerticalAlignment="Top" Width="87" Height="75" BorderThickness="4"                             >
    		<Image x:Name="profile_icon" Height="46" Source="Assets/ButtonLogos/profile.png" Stretch="Fill" Width="45"/>
    	</Button>
    	<TextBlock x:Name="soiltest_block" HorizontalAlignment="Left" Margin="190,112,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Perform soil test" VerticalAlignment="Top" Height="37" Width="229" FontSize="29.333" FontFamily="Global User Interface"/>
    	<TextBlock x:Name="view_reports_block" HorizontalAlignment="Left" Margin="190,264,0,0" Grid.Row="1" TextWrapping="Wrap" Text="View Reports" VerticalAlignment="Top" Height="37" Width="229" FontSize="29.333" FontFamily="Global User Interface"/>
    	<TextBlock x:Name="update_profile_block" HorizontalAlignment="Left" Margin="190,415,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Update profile" VerticalAlignment="Top" Height="37" Width="229" FontSize="29.333" FontFamily="Global User Interface"/>
    	<ComboBox x:ConnectionId='2' x:Name="language_combo" Grid.Column="1" HorizontalAlignment="Left" Margin="425,26,0,0" Grid.Row="1" VerticalAlignment="Top" Width="226"                                                   >
    		<ComboBoxItem x:Name="Eng_comboitem" Content="English-IN" />
    		<ComboBoxItem x:Name="hindi_comboitem" Content="Hindi"/>
    	</ComboBox>
    	<TextBlock x:Name="language_block" Grid.Column="1" HorizontalAlignment="Left" Margin="305,26,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Language :" VerticalAlignment="Top" Height="32" Width="128" FontSize="21.333" FontFamily="Global User Interface"/>
    	<TextBlock x:Name="aboutapp" Grid.Column="1" HorizontalAlignment="Left" Margin="66,103,0,0" Grid.Row="1" TextWrapping="Wrap" Text="&lt;About app in brief&gt;" VerticalAlignment="Top" Height="431" Width="552" FontSize="32"/>
    	<StackPanel x:Name="top_panel" HorizontalAlignment="Left" Height="110" VerticalAlignment="Top" Width="1346" Background="#FF217D81" Orientation="Horizontal" Grid.ColumnSpan="2" Margin="10,10,0,0" Grid.RowSpan="2">
    		<TextBlock x:Name="firstpage_header" TextWrapping="Wrap" Text="  E-Farmer" Height="52" Width="283" FontSize="48" FontWeight="Bold" Margin="0,29"/>
    	</StackPanel>

    </Grid>
</Page>

