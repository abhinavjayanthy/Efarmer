<Page
    x:Class="Efarmer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Efarmer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="Index" Background="#FF3CB8D3">
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="342*"/>
    		<ColumnDefinition Width="341*"/>
    	</Grid.ColumnDefinitions>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="55*"/>
    		<RowDefinition Height="329*"/>
    	</Grid.RowDefinitions>
    	<Button x:ConnectionId='1' x:Name="test_button" HorizontalAlignment="Left" Margin="76,93,0,0" VerticalAlignment="Top" Height="70" Width="70" Grid.Row="1" BorderThickness="0"                           Background="#FF22CFE0"/>
        <Button x:Name="reports_button" HorizontalAlignment="Left" Margin="76,240,0,0" Grid.Row="1" VerticalAlignment="Top" Width="70" Height="70" BorderThickness="0" Background="#FF22CFE0"/>
        <Button x:ConnectionId='2' x:Name="profile_button" HorizontalAlignment="Left" Margin="76,398,0,0" Grid.Row="1" VerticalAlignment="Top" Width="70" Height="70" BorderThickness="0"                              Background="#FF22CFE0"/>
    	<TextBlock x:Name="soiltest_block" HorizontalAlignment="Left" Margin="163,112,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Perform soil test" VerticalAlignment="Top" Height="56" Width="285" FontSize="30" FontFamily="Global User Interface"/>
    	<TextBlock x:Name="view_reports_block" HorizontalAlignment="Left" Margin="163,264,0,0" Grid.Row="1" TextWrapping="Wrap" Text="View Reports" VerticalAlignment="Top" Height="51" Width="229" FontSize="30" FontFamily="Global User Interface"/>
    	<TextBlock x:Name="update_profile_block" Margin="163,421,236,0" Grid.Row="1" TextWrapping="Wrap" Text="Update profile" VerticalAlignment="Top" Height="47" FontSize="30" FontFamily="Global User Interface"/>

        <StackPanel x:Name="top_panel" HorizontalAlignment="Left" Height="110" VerticalAlignment="Top" Width="1346" Background="#FF476ED8" Orientation="Horizontal" Grid.ColumnSpan="2" Margin="10,10,0,0" Grid.RowSpan="2">

            <TextBlock x:Name="welcome_block" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Height="48" Margin="0,39,0,23" Width="185">
    			<Run FontSize="36" Text="  Welcome,"/>
    			<Run/>
            </TextBlock>
            <TextBlock x:Name="name_from_db" TextWrapping="Wrap" Margin="0,49,20,23" Width="904" HorizontalAlignment="Left" VerticalAlignment="Center" Height="38" FontSize="24" FontWeight="Bold"/>
            <TextBlock x:Name="firstpage_header" TextWrapping="Wrap" Text="E-Farmer" Width="212" FontSize="48" FontWeight="Bold" Margin="0,29,0,23"/>


        </StackPanel>
        <Button x:ConnectionId='3' x:Name="help_button" Grid.Column="1" HorizontalAlignment="Left" Margin="123,240,0,0" Grid.Row="1" VerticalAlignment="Top" Width="70" Height="70" BorderThickness="0" FontWeight="Bold" FontSize="48"                           Foreground="#FF22CFE0" Background="#FF22CFE0"/>
        <TextBlock x:Name="help_block" HorizontalAlignment="Left" Margin="204,264,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Help" VerticalAlignment="Top" Height="56" Width="101" FontSize="30" FontFamily="Global User Interface" Grid.Column="1"/>
        <Button x:ConnectionId='4' x:Name="crop_wiki_button" Grid.Column="1" HorizontalAlignment="Left" Margin="123,93,0,0" Grid.Row="1" VerticalAlignment="Top" Width="70" Height="70" BorderThickness="0" FontWeight="Bold" FontSize="48"                                Background="#FF22CFE0">
        	
        </Button>
        <TextBlock x:Name="crop_wiki_block" HorizontalAlignment="Left" Margin="204,112,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Crop News" VerticalAlignment="Top" Height="56" Width="229" FontSize="30" FontFamily="Global User Interface" Grid.Column="1"/>




    </Grid>
</Page>

