<Page
    x:Class="Efarmer.BlankPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Efarmer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Background="Black">

    <Grid x:Name="ProfileUpdate" Background="#FF3CB8D3">
    	
    	<StackPanel x:Name="top_panel" HorizontalAlignment="Left" Height="110" VerticalAlignment="Top" Width="1346" Orientation="Horizontal" Margin="10,10,0,0" Background="#FF476ED8" Grid.ColumnSpan="2">
            <Button x:ConnectionId='2' x:Name="backButton"                IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}" Margin="10,29,0,29" VerticalAlignment="Center" Height="52" Width="51" HorizontalAlignment="Center"/>
            <TextBlock x:Name="firstpage_header" TextWrapping="Wrap" Text=" Update Profile" Height="52" Width="358" FontSize="48" FontWeight="Bold" Margin="0,29"/>
        </StackPanel>
        <Button x:ConnectionId='1' x:Name="save" Content="Save&#xD;&#xA;" HorizontalAlignment="Left" Margin="1209,690,0,0" VerticalAlignment="Top" Height="43" Width="95" Background="#FF07B1F1" RenderTransformOrigin="1.222,0.686"                   />
        <TextBlock x:Name="first_nameb" HorizontalAlignment="Left" Margin="46,184,0,0" TextWrapping="Wrap" Text="FirstName :" VerticalAlignment="Top" FontSize="26.667" Height="32" Width="133"/>
    	<TextBlock x:Name="last_nameb" HorizontalAlignment="Left" Margin="46,248,0,0" TextWrapping="Wrap" Text="LastName :" VerticalAlignment="Top" FontSize="26.667" Height="32" Width="130"/>
    	<TextBlock x:Name="adress_block" HorizontalAlignment="Left" Margin="46,314,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="26.667" Text="Address :" Height="32" Width="107"/>
    	<TextBlock x:Name="country_b" HorizontalAlignment="Left" Margin="46,673,0,0" TextWrapping="Wrap" Text="Country :" VerticalAlignment="Top" FontSize="26.667" Height="32" Width="108"/>
    	<TextBlock x:Name="state_b" HorizontalAlignment="Left" Margin="46,435,0,0" TextWrapping="Wrap" Text="State :" VerticalAlignment="Top" FontSize="26.667" Height="32" Width="72"/>
    	<TextBlock x:Name="zipcode_b" HorizontalAlignment="Left" Margin="46,494,0,0" TextWrapping="Wrap" Text="ZipCode :" VerticalAlignment="Top" FontSize="26.667" Height="32" Width="112"/>
    	<TextBlock x:Name="district" HorizontalAlignment="Left" Margin="46,374,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="26.667" Height="41" Width="96">
    		<Run Text="District :"/>
    		<LineBreak/>
    		<Run/>
    	</TextBlock>
    	<TextBox x:Name="firstname_box" HorizontalAlignment="Left" Margin="220,184,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="488" Grid.ColumnSpan="2" Height="32"/>
    	<TextBox x:Name="lastname_box" HorizontalAlignment="Left" Margin="220,248,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="488" Grid.ColumnSpan="2" Height="32"/>
    	<TextBox x:Name="adress_box" HorizontalAlignment="Left" Margin="220,314,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="488" Grid.ColumnSpan="2" Height="32"/>
    	<TextBox x:Name="district_box" HorizontalAlignment="Left" Margin="220,374,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="234" Height="32"/>
        <TextBox x:Name="zipcode_box" HorizontalAlignment="Left" Margin="220,494,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="234" Height="32"/>
        <ComboBox x:Name="state_box" HorizontalAlignment="Left" VerticalAlignment="Top" Width="344" Margin="220,435,0,0" Height="32">
            <x:String>AndhraPradesh</x:String>
        </ComboBox>
        <ComboBox x:Name="country_box" HorizontalAlignment="Left" Margin="220,673,0,0" VerticalAlignment="Top" Width="194" Height="32">
            <x:String>India</x:String>

        </ComboBox>
        <TextBlock x:Name="latitude_block" HorizontalAlignment="Left" Margin="46,553,0,0" TextWrapping="Wrap" Text="Latitude :" VerticalAlignment="Top" FontSize="26.667" Height="32" Width="112"/>
        <TextBlock x:Name="longitude_block" HorizontalAlignment="Left" Margin="46,611,0,0" TextWrapping="Wrap" Text="Longitude :" VerticalAlignment="Top" FontSize="26.667" Height="32" Width="142"/>
        <TextBox x:Name="latitude_box" HorizontalAlignment="Left" Margin="220,553,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="234" Height="32"/>
        <TextBox x:Name="longitude_box" HorizontalAlignment="Left" Margin="220,611,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="234" Height="32"/>



    </Grid>
</Page>

